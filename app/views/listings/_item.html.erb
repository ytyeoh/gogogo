<% @listings.each do |listing| %>
  <li class="show">
    <div class="thumbnail">
      <div class="row">
        <div class="col-md-6">
                  <img alt="" src="http://placehold.it/260x180">
        </div>
          <div class="col-md-6">
            <h3><%= listing.name %></h3>
              <div class="row">
                <div class="col-md-6 address">
                  <h6><%= listing.address %></h6>
                </div>
                <div class="col-md-6">
                  <%= listing.city %>
                </div>
                <div class="col-md-6">
                  <h5>RM<%= listing.price %> per month</h5>
                </div>
                <div class="col-md-6">
                  <%= link_to 'Know more', listing, class: "btn btn-info" %>
                </div>
            </div>
          </div>
        </div>
    </div>
  </li>
<% end %>