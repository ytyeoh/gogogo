<%= form_for(@listing, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @listing.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :desc, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :desc, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :imove_in, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :imove_in, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <%= f.hidden_field :latitude, id: "latitude" %>
    <%= f.hidden_field :longitude, id: "longitude" %>
    <%= hidden_field_tag 'city', request.location.city %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control", id: "special" %>
    </div>
    <div style='width: 90%;'>
    <div id="map" style='width: 90%; height: 400px;'></div>
    </div>

  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <% if current_user.confirmed? %>
        <%= f.submit class: "btn btn-primary" %>
      <% else %>
        <%= link_to "Resend confirm email", new_confirmation_path(current_user), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
